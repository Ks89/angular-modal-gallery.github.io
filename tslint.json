{
  "extends": [
    "tslint:recommended"
  ],
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "rules": {
    "trailing-comma": [false, {"multiline": "always", "singleline": "never"}],
    "interface-name": ["always-prefix"],

    "component-selector": [true, "element", ["mmw", "admin"], "kebab-case"],
    "component-class-suffix": [true, "Component"],
    "directive-selector": [true, "attribute", ["mmw", "admin"], "camelCase"],
    "directive-class-suffix": [true, "Directive"],
    "import-destructuring-spacing": true,
    "invoke-injectable": true,
    "member-access": [true, "no-public"],
    "no-attribute-parameter-decorator": true,
    "no-forward-ref": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "only-arrow-functions": false,
    "pipe-naming": [true, "camelCase", "mmw"],
    "templates-use-public": true,
    "use-host-property-decorator": true,
    "use-input-property-decorator": true,
    "use-life-cycle-interface": true,
    "use-output-property-decorator": true,
    "use-pipe-transform-interface": true,

    "arrow-parens": false,
    "array-type": [true, "array-simple"],
    "no-console": [true,
      "time",
      "timeEnd",
      "trace"
    ],
    "max-line-length": [
      true,
      220
    ],
    "no-string-literal": false,
    "no-use-before-declare": true,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "variable-name": [
      true,
      "allow-leading-underscore",
      "allow-pascal-case",
      "ban-keywords",
      "check-format"
    ]
  }
}
